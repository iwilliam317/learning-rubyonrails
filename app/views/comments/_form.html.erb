<%= form_for [post, comment] do |form| %> 

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :comment_author %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :comment_email %>
  </div>


  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :comment_url %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :comment_body , :rows=> 10, :cols=> 90 %>
  </div>
 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
